//- Parent template for layouting
extends ../components/layout.pug

include ../components/mixins/_card-post.pug
include ../components/mixins/_card-tag.pug

//- Add variable you can use
block vars
    - var body_class = 'bg-light'
    include ../data/list_posts.pug


block head-content
    include ../components/_head.pug

block title
    title Setting Profile

block body-content
    include ../components/_navbar.pug
    .container.page-content
        .row    
            .col-md-3.d-none.d-md-block
                include ../components/_setting-nav.pug
            .col-12.col-md-9
                .bg-white.p-4.mb-3.shadow-sm
                    h3.mb-4 User
                    .mb-3
                        label.form-label(for='email') Email
                        input#email.form-control(type='email' placeholder='Email...')
                    .mb-3
                        label.form-label(for='username') Username
                        input#username.form-control(type='text' placeholder='Username...')
                    .mb-3
                        label.form-label(for='profile-image') Profile Image
                        .d-flex
                            img.rounded-circle.mr-4(src='../assets/images/photo-2.jpg' alt='' width='40px' height='40px')
                            input#profile-image.form-control(type='file' placeholder='profile-image...')
                
                .bg-white.p-4.mb-3.shadow-sm
                    h3.mb-4 Basic
                    .mb-3
                        label.form-label(for='name') Name
                        input#name.form-control(type='text' placeholder='Name...')
                    .mb-3
                        label.form-label(for='location') Location
                        input#location.form-control(type='text' placeholder='Location...')
                    .mb-3
                        label.form-label(for='work') Work
                        input#work.form-control(type='text' placeholder='Work...')
                    .mb-3
                        label.form-label(for='summary') Summary
                        textarea#summary.form-control(name='summary' placeholder='Summary...')

                .bg-white.p-4.mb-3.shadow-sm
                    h3.mb-4 Links
                    .mb-3
                        label.form-label(for='website') Website
                        input#website.form-control(type='text' placeholder='Website...')
                    .mb-3
                        label.form-label(for='github') Github
                        input#github.form-control(type='text' placeholder='Github...')
                .mb-3
                    button.btn.btn-primary.btn-block Save profile information
