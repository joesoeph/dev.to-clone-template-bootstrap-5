//- Parent template for layouting
extends ../components/layout.pug

include ../components/mixins/_card-dashboard-post.pug
include ../components/mixins/_post-filter-tab.pug

//- Add variable you can use    
block vars
    - var body_class = 'bg-light'
    include ../data/list_posts.pug


block head-content
    include ../components/_head.pug

block title
    title Dasboard Posts

block body-content
    include ../components/_navbar.pug
    .container.page-content
        .row
            .col-md-3.d-none.d-md-block
                include ../components/_dashboard-nav.pug
            .col-12.col-md-9
                each val in list_posts
                    +card-dashboard-post('../assets/images/photo-1.jpeg', 'Yusuf Fazeri', val.post_published, val.post_title, val.post_tags)
                include ../components/_button-loadmore.pug